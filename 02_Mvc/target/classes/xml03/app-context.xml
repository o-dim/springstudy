<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- namespaces 탭에서 P 옵션을 체크하면 property 태그를 bean태그의 p: 속성으로 줄 수 있다 -->
	<bean id="user" class="com.gdu.app01.xml03.User" p:id="Spiderman" p:name="Peter Parker"/>
	<bean id="board" class="com.gdu.app01.xml03.Board" p:title="notice" p:content="whothehellisPeterParker?" p:writer-ref="user"/>

</beans>
